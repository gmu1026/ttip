@model IEnumerable<TTIPApplication.Models.PLACE>

@{
    ViewBag.Title = "Index";
}

    <section class="page-section" id="services">
        <div class="container">
            <h2 class="text-center mt-0">Search</h2>
            <hr class="divider my-4">
            <form action="/Place/Search" method="post">
                <div class="row">
                    <div class="col-md-3">
                        @Html.DropDownList("CITY", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="col-md-3">
                        @Html.DropDownList("CATEGORY", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="col-md-3">
                        @using (Html.BeginForm())
                        {
                            <p>
                                @Html.TextBox("searchString") <input type="submit" value="Search" />
                            </p>
                        }
                    </div>
                    <div class="col-md-3">
                        

                    </div>
                </div>
            </form>
        </div>
    </section>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.STORE_NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EXPLANATION)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ADDRESS)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DETAIL_IMAGE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CATEGORY1.CATEGORY_NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CITY1.CITY_NAME)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.STORE_NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EXPLANATION)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ADDRESS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DETAIL_IMAGE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CATEGORY1.CATEGORY_NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CITY1.CITY_NAME)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
