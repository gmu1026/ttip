@model TTIPApplication.Models.PLACE

@{
    ViewBag.Title = "Create";
}
<section class="create_img"></section>
<section>
    <div class="container_test">
        <br>
        <br>
        <h2 class="text-center text-black"> <i class="fa fa-plus-circle fa-1x"></i> Create </h2>
        <hr class="divider my-4">
        <div class="card w-100">
            <br />
            @using (Html.BeginForm("Create", "Place", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2>&nbsp;&nbsp;&nbsp;&nbsp;Place</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.STORE_NAME, htmlAttributes: new { @class = "control-label col-md-4" ,@style = "margin-left: 35px;"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.STORE_NAME, new { htmlAttributes = new { @class = "form-control", @placeholder = "Place", @style = "margin-left: 35px;" } })
                    @Html.ValidationMessageFor(model => model.STORE_NAME, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CITY, "CITY", htmlAttributes: new { @class = "control-label col-md-4", @style = "margin-left: 35px;" })
                <div class="col-md-10">
                    @Html.DropDownList("CITY", null, htmlAttributes: new { @class = "form-control", @style = "margin-left: 35px;" })
                    @Html.ValidationMessageFor(model => model.CITY, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CATEGORY, "CATEGORY", htmlAttributes: new { @class = "control-label col-md-4", @style = "margin-left: 35px;" })
                <div class="col-md-10">
                    @Html.DropDownList("CATEGORY", null, htmlAttributes: new { @class = "form-control", @style = "margin-left: 35px;" })
                    @Html.ValidationMessageFor(model => model.CATEGORY, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.EXPLANATION, htmlAttributes: new { @class = "control-label col-md-4", @style = "margin-left: 35px;" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.EXPLANATION, 3, 60, htmlAttributes : new { @class = "form-control", @style = "margin-left: 35px;" })
                    @Html.ValidationMessageFor(model => model.EXPLANATION, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DETAIL_IMAGE, htmlAttributes: new { @class = "control-label col-md-4", @style = "margin-left: 35px;" })
                <div class="col-md-10">
                    <input type="file" name="upload_image" style= "margin-left: 35px"/>
                    @Html.ValidationMessageFor(model => model.DETAIL_IMAGE, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-primary mb-2" style= "margin-left: 35px"/>
                    @Html.ActionLink(" Back", "Index", "Place", null, htmlAttributes: new { @class = "btn btn-primary mb-2" })
                </div>
            </div>
        </div>
            }
        </div>
        <br />
        <br />
        <br />
        <br />
    </div>
</section>