@model IEnumerable<TTIPApplication.Models.REVIEW>

@{
    ViewBag.Title = "TTIP";
}
<header class="masthead">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-10 align-self-end">
            </div>
            <div class="col-lg-8 align-self-baseline">
                <p class="text-white-75 font-weight-light mb-5">Start Bootstrap can help you build better websites using the Bootstrap framework! Just download a theme and start customizing, no strings attached!</p>
                <a class="btn btn-primary btn-xl js-scroll-trigger" href="/Place/">Find Out More</a>
            </div>
        </div>
    </div>
</header>


<section class="page-section" id="services">
    <div class="container">
        <h2 class="text-center mt-0">Providing Service</h2>
        <hr class="divider my-4">
        <div class="row">
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <i class="fa fa-check fa-3x"></i>
                    <h3 class="h4 mb-2">Reliability information</h3>
                    <p class="text-muted mb-0">Our themes are updated regularly to keep them bug free!</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <i class="fa fa-upload fa-3x"></i>
                    <h3 class="h4 mb-2">Up to Date</h3>
                    <p class="text-muted mb-0">All dependencies are kept current to keep things fresh.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <i class="fa fa-search fa-3x"></i>
                    <h3 class="h4 mb-2">Quick Search</h3>
                    <p class="text-muted mb-0">You can use this design as is, or you can make changes!</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <i class="fa fa-user-circle-o fa-3x"></i>
                    <h3 class="h4 mb-2">Ensure anonymity</h3>
                    <p class="text-muted mb-0">Is it really open source if it's not made with love?</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="portfolio">
        <div class="container-fluid">
            <h2 class="text-center mt-0">Recent Reviews</h2>
            <hr class="divider my-4">
            <div class="row no-gutters">
                @{ int i = 0;}
                @foreach (var item in Model)
                {
                    if(i > 5) { break; }
                    <div class="col-lg-4 col-sm-6">
                        <a class="portfolio-box" href="/Place/Details/@item.PID ">
                            @{ 
                                if (item.REVIEW_IMAGE != null)
                                {
                                    <img class="img-fluid" src="~/images/@item.REVIEW_IMAGE">
                                } else
                                {
                                    <img class="img-fluid" src="~/images/404.png">
                                }
                            }
                            <div class="portfolio-box-caption">
                                <div class="project-category text-white-50">
                                    @Html.DisplayFor(modelitem => item.PLACE.CATEGORY)
                                </div>
                                <div class="project-name">
                                    @Html.DisplayFor(modelitem => item.PLACE.STORE_NAME)
                                </div>
                            </div>
                        </a>
                    </div>
                    i++;
                }
                </div>
        </div>
</section>

<section class="page-section" id="contact">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="mt-0">Let's Get In Touch!</h2>
                <hr class="divider my-4">
                <p class="text-muted mb-5">Ready to start your next project with us? Give us a call or send us an email and we will get back to you as soon as possible!</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 ml-auto text-center mb-5 mb-lg-0">
                <i class="fa fa-phone fa-3x"></i>
                <div>+1 (202) 555-0149</div>
            </div>
            <div class="col-lg-4 mr-auto text-center">
                <i class="fa fa-envelope fa-3x"></i>
                <!-- Make sure to change the email address in anchor text AND the link below! -->
                <a class="d-block" href="mailto:contact@yourwebsite.com">contact@yourwebsite.com</a>
            </div>
        </div>
    </div>
</section>

