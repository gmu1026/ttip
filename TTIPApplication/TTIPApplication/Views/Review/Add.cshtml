
@{
    ViewBag.Title = "Add";
}

<div class="container">
    <form action="">
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <div class="row">
                        <div class="col-2">
                            <label>Author :</label>
                        </div>
                        <div class="col">
                            <input type="text" id="reviewAuthor" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-2">
                            <label>Score : </label>
                        </div>
                        <div class="col-1">
                            <select class="form-control" id="reviewScore">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-2">
                            <label for="contents">Contents :</label>
                        </div>
                        <div class="col">
                            <textarea class="form-control" id="ReviewContents"></textarea>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-2">
                        <label>Attached image : </label>
                    </div>
                    <div class="col-5">
                        <div class="custom-file mb-3">
                            <input type="file" class="custom-file-input" id="customFile" name="filename">
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <div class="float-right">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <button type="button" class="btn btn-primary">Back</button>
                    </div>
                </div>


                <div class="form-group">
                    <label for="exampleFormControlFile1">Example file input</label>
                    <input type="file" class="form-control-file" id="exampleFormControlFile1">
                </div>
            </div>
        </div>
    </form>
</div>
